<div>
    <h4>OrderItems</h4>
    <hr />
    @if (Model.OrderItems.Any())
    {
        foreach (var review in Model.OrderItems)
        {
            <div>
                <p>Book: @review.BookId , Quantity: @review.Quantity , Price:@review.Price , OrderId: @review.OrderId</p>
                <hr />
            </div>
        }
    }
    else
    {
        <p>No reviews available.</p>
    }

</div>
