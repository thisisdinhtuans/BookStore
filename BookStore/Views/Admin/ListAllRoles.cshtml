@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{ 
    ViewData["Title"] = "All roles";
}

<h1>All roles</h1>
<a class="btn btn-primary mb-2" asp-action="AddRole"><i class="fa-solid fa fa-users"> Add role</i></a>

@if (Model.Any())
{
    <table class="table col-3">
        <thead>
             <tr>
                 <td><h5>Role</h5></td>
             </tr>
        </thead>
        @foreach(var role in Model)
                {
                    <tbody>
                        <tr>
                            <td>@role.Name</td>
                            <td class="text-center">
                                <a href="#" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a href="#" class="btn btn-danger btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                        </tr>
                    </tbody>
                }
    </table>
}
else
{
    <h%>No roles yet, the button above to add your first role.</h%>
}
